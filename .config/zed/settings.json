{
  "theme": "Catppuccin Latte",
  "ui_font_family": "Source Sans 3", // https://github.com/zed-industries/zed/issues/22676
  "ui_font_size": 16,
  "ui_font_weight": 500, // https://github.com/zed-industries/zed/issues/13564
  "buffer_font_family": "Iosevka Term", // https://github.com/zed-industries/zed/issues/22676
  "buffer_font_size": 14,
  "buffer_font_weight": 500, // https://github.com/zed-industries/zed/issues/13564

  // https://github.com/zed-industries/zed/issues/20226
  "project_panel": {
    "auto_fold_dirs": false
  },

  "vim_mode": true,
  "use_smartcase_search": true,

  "tab_size": 2,

  "autosave": "on_focus_change",
  "code_actions_on_format": {
    "source.fixAll.biome": true,
    "source.organizeImports.biome": true
  },

  "terminal": {
    "font_weight": 500, // https://github.com/zed-industries/zed/issues/13564
    "line_height": "standard",

    "toolbar": {
      "breadcrumbs": false
    },

    "shell": {
      "with_arguments": {
        "title_override": "Terminal",
        "program": "x-spawn",
        "args": []
      }
    }
  },

  "features": {
    "edit_prediction_provider": "zed"
  },

  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    }
  },

  "auto_install_extensions": {
    "catppuccin": true
  }
}
