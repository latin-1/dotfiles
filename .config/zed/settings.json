{
  "theme": "Catppuccin Latte",
  "ui_font_family": "Source Sans 3",
  "ui_font_size": 16,
  "buffer_font_family": "Iosevka Term",
  "buffer_font_size": 14,

  // https://github.com/zed-industries/zed/issues/20226
  "project_panel": {
    "auto_fold_dirs": false
  },

  "vim_mode": true,
  "use_smartcase_search": true,
  "autosave": "on_focus_change",

  "terminal": {
    "shell": {
      "with_arguments": {
        "title_override": "Toolbox",
        "program": "toolbox",
        "args": ["enter"]
      }
    }
  },

  "auto_install_extensions": {
    "catppuccin": true
  }
}
