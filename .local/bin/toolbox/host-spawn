#!/bin/bash
set -eo pipefail

flags=()
if [[ ! -t 1 ]]; then
  # https://github.com/1player/host-spawn/issues/40
  flags+=(--no-pty)
fi

program="$(basename "$0")"
if [[ $program == host-spawn ]]; then
  /usr/bin/host-spawn "${flags[@]}" "$@"
else
  /usr/bin/host-spawn "${flags[@]}" "$program" "$@"
fi
